mixin test(name, title)
	.test
		.test__title= title
		.test__list
			.test__item.test__1920.diff-hidden 
				.test__item-head
					.test__item-width 1920px 
					input.test__item-opacity(min="0" max="100" value="0"  type="range")
					buttom(type="button").test__item-shot Проверить
				.test__item-body
					.test__item-iframe-wrap
						iframe(width="1920" scrolling="no"    src="test/"+name+".html" frameborder="0" ).test__item-iframe 
					img(src="test/img/"+name+"-1920.png", alt="").test__item-maket.img1
					canvas.test__item-diff
			
			.test__item.test__1440.diff-hidden 
